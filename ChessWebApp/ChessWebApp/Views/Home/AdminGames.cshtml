@model List<AdminGameDto>

@{
    ViewData["Title"] = "Admin Panel - Games";
}

<div class="d-flex bd-highlight bg-dark text-white border-bottom box-shadow mb-3">
    <div class="p-2 flex-grow-1 bd-highlight">Chess - Web App - <a class="btn-outline-secondary" asp-area="" asp-controller="Home" asp-action="Spectate">Spectate</a></div>
    <div class="p-2 bd-highlight">
        <form asp-controller="Home" asp-action="Index" method="post">
            <input id="index" type="submit" value="Return to Profile" class="btn-secondary" />
        </form>
    </div>
    <div class="p-2 bd-highlight">
        <form asp-controller="Home" asp-action="Logout" method="post">
            <input id="logout" type="submit" value="Logout" class="btn-secondary" />
        </form>
    </div>
</div>

<div class="text-center">
    <h1 class="display-16">Manage games:</h1>
    <form asp-controller="Home" asp-action="EditGame" method="post">
        <table class="w-100 mx-auto text-center">
            <thead>
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Black figures Player
                    </th>
                    <th>
                        White figures Player
                    </th>
                    <th>
                        Winner
                    </th>
                    <th>
                        Loser
                    </th>
                    <th>
                        Game start
                    </th>
                    <th>
                        Game end
                    </th>
                    <th>
                        Delete
                    </th>
                </tr>
            </thead>
            <tbody>
                    @for (int i = 0; i < Model.Count; i++)
                    {         
                        <tr class="alert alert-dark">
                            <th>
                                <input type="hidden" asp-for="@Model[i].Id" />
                                @Model[i].Id
                            </th>
                            <th>
                                @Model[i].PlayerTopName
                            </th>
                            <th>
                                @Model[i].PlayerBottomName
                            </th>
                            <th>
                                @Model[i].PlayerWinnerName
                            </th>
                            <th>
                                @Model[i].PlayerLoserName
                            </th>
                            <th>
                                @Model[i].TimeStart
                            </th>
                            <th>
                                @Model[i].TimeEnd
                            </th>
                            <th>
                                <input type="checkbox" asp-for="@Model[i].MarkForDel">
                            </th>
                        </tr>
                    }
            </tbody>
        </table>
        <input id="save" type="submit" value="Save changes" class="btn btn-primary w-50" />
    </form>
</div>
