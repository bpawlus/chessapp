<Window x:Class="ChessApp.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessApp"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Login to Chess Web App" Height="225" Width="225">
    <Grid>
        <Button Content="Login" Click="Login" HorizontalAlignment="Center" Margin="0,160,0,0" VerticalAlignment="Top" Height="20" Width="200"/>
        <Label Content="Login" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="login" Text="" HorizontalAlignment="Center" Margin="0,30,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="200"/>
        <Label Content="Password" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top"/>
        <PasswordBox x:Name="password" HorizontalAlignment="Center" Margin="0,90,0,0" VerticalAlignment="Top" Width="200"/>
    </Grid>
</Window>
